<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="5dp"
    android:paddingEnd="5dp"
    android:background="@drawable/popup_background">

    <TextView
        android:id="@+id/appointmentIntervalPopupCaption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="@string/appointment_interval_popup_caption"
        style="@style/PopupItem" />

    <EditText
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:inputType="text"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/appointmentIntervalPopupStart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/appointment_interval_popup_start"
        android:nextFocusUp="@id/appointmentIntervalPopupStart"
        android:inputType="text"
        style="@style/PopupItem" />

    <EditText
        android:id="@+id/appointmentIntervalPopupEnd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/appointment_interval_popup_end"
        android:nextFocusDown="@id/appointmentIntervalPopupEnd"
        android:inputType="text"
        style="@style/PopupItem" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_marginBottom="5dp">

        <Button
            android:id="@+id/appointmentIntervalPopupAddButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="14sp"
            android:text="@string/appointment_interval_popup_create_button" />

        <Button
            android:id="@+id/appointmentIntervalPopupRemoveButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="14sp"
            android:visibility="gone"
            android:text="@string/appointment_interval_popup_remove_button" />

    </LinearLayout>

</LinearLayout>
